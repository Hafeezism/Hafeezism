    <script>
        // Trigger the fade-in effect by adding the 'show' class to the welcome message
        document.addEventListener("DOMContentLoaded", function () {
            var welcomeMessage = document.getElementById('welcome-message');
            welcomeMessage.style.display = 'block';
            welcomeMessage.classList.add('show');
        });

        // Check if the last person element is reached, then show appreciation message
        document.addEventListener("DOMContentLoaded", function () {
            var personElements = document.querySelectorAll('.person');
            var appreciationMessage = document.getElementById('appreciation-message');

            personElements[personElements.length - 1].addEventListener('transitionend', function () {
                appreciationMessage.style.display = 'block';
                appreciationMessage.classList.add('show');
            });
        });
    </script>
